{
	"plugins": [
		"@typescript-eslint/eslint-plugin",
		"eslint-plugin-tsdoc"
	],
	"extends": [
		"plugin:@typescript-eslint/recommended"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"project": "./tsconfig.json",
		"ecmaVersion": 2020,
		"sourceType": "module"
	},
	"rules": {
		"tsdoc/syntax": "warn",
		"max-len": [
			"error",
			{
				"code": 120,
				"tabWidth": 4,
				"comments": 100,
				"ignoreComments": false,
				"ignoreUrls": true
			}
		]
	}
}